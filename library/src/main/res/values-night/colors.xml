<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base colors - Higher contrast for dark theme -->
    <color name="colorPrimary">@android:color/system_accent1_200</color>
    <color name="colorPrimaryDark">@android:color/system_accent1_300</color>
    <color name="colorAccent">@android:color/system_accent1_200</color>
    
    <!-- Surface colors - Better dark theme contrast -->
    <color name="surfaceColor">@android:color/system_neutral1_900</color>
    <color name="surfaceColorVariant">@android:color/system_neutral2_800</color>
    
    <!-- Text colors - Improved visibility in dark mode -->
    <color name="textColorPrimary">@android:color/system_neutral1_50</color>
    <color name="textColorSecondary">@android:color/system_neutral1_200</color>

    <!-- Navigation colors - Dark theme contrast -->
    <color name="navigationViewText">#E0E0E0</color>
    <color name="navigationViewTextSelected">#4CAF50</color>
    <color name="navigationViewSelectedBackground">#1A4CAF50</color>

    <!-- Tab colors - Better dark mode visibility -->
    <color name="tabIndicator">#BDBDBD</color>
    <color name="tabText">#9E9E9E</color>
    <color name="tabTextSelected">#BDBDBD</color>

    <!-- Card colors -->
    <color name="cardStroke">#1FFFFFFF</color>

    <!-- Ripple colors - More visible in dark theme -->
    <color name="rippleColor">#1FFFFFFF</color>
    <color name="rippleAccent">#334CAF50</color>

    <!-- Divider - Subtle but visible in dark mode -->
    <color name="dividerColor">#1FFFFFFF</color>
</resources> 