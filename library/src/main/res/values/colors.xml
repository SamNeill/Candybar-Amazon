<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material3 color attributes -->
    <attr name="colorSurfaceVariant" format="color" />
    <attr name="colorOnSurfaceVariant" format="color" />
    <attr name="colorOutline" format="color" />
    
    <!-- Base colors - Increased contrast -->
    <color name="colorPrimary">@android:color/system_accent1_600</color>
    <color name="colorPrimaryDark">@android:color/system_accent1_800</color>
    <color name="colorAccent">@android:color/system_accent1_600</color>
    
    <!-- Surface colors - Better contrast with text -->
    <color name="surfaceColor">@android:color/system_neutral1_10</color>
    <color name="surfaceColorVariant">@android:color/system_neutral2_50</color>
    
    <!-- Text colors - Higher contrast ratios -->
    <color name="textColorPrimary">@android:color/system_neutral1_900</color>
    <color name="textColorSecondary">@android:color/system_neutral1_700</color>

    <!-- Navigation colors - Improved contrast -->
    <color name="navigationViewText">@android:color/system_neutral1_700</color>
    <color name="navigationViewTextSelected">@android:color/system_accent1_600</color>
    <color name="navigationViewSelectedBackground">#1A006E3A</color>

    <!-- Tab colors - Better visibility -->
    <color name="tabIndicator">#424242</color>
    <color name="tabText">#666666</color>
    <color name="tabTextSelected">#424242</color>

    <!-- Card colors -->
    <color name="cardStroke">#1F000000</color>

    <!-- Splash screen color -->
    <color name="splashColor">#FFFFFF</color>

    <!-- Shortcut icon colors -->
    <color name="shortcutIconBackground">@android:color/system_accent1_100</color>
    <color name="shortcutIconForeground">@android:color/system_accent1_600</color>

    <!-- Ripple colors - More visible -->
    <color name="rippleColor">#1F000000</color>
    <color name="rippleAccent">#33006E3A</color>

    <!-- Divider - Subtle but visible -->
    <color name="dividerColor">#1F000000</color>
</resources>